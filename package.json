{
  "name": "mx-react-components",
  "version": "6.0.1",
  "description": "A collection of generic React UI components",
  "main": "dist/Index.js",
  "scripts": {
    "build": "babel src --out-dir dist --ignore __tests__",
    "release": "npm install && npm run test && npm run build",
    "dev-release": "npm install && npm run build -- --watch",
    "dev": "npm install && npm upgrade && cd docs && npm install && npm upgrade && open 'http://localhost:8080' && NODE_ENV=development webpack-dev-server --inline --hot --host 0.0.0.0",
    "docs:release": "npm install && cd docs && npm instal && NODE_ENV=production webpack --progress && git add -A && git commit -m \"Docs Version: $(node -p 'require(\"../package.json\").version')\"",
    "test": "jest && eslint src",
    "watch": "jest --watch --coverage=false",
    "eslint": "eslint src --fix"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/moneydesktop/mx-react-components"
  },
  "keywords": [
    "react",
    "components",
    "mx",
    "UI",
    "library"
  ],
  "author": "MX",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/moneydesktop/mx-react-components/issues"
  },
  "homepage": "http://moneydesktop.github.io/mx-react-components/",
  "dependencies": {
    "bowser": "^1.9.4",
    "d3": "^3.5.6",
    "focus-trap-react": "^3.1.4",
    "glamor": "^2.20.40",
    "keycode": "^2.1.8",
    "lodash": "^4.17.11",
    "moment": "^2.22.2",
    "moment-timezone": "^0.5.17",
    "numeral": "^1.5.3",
    "prop-types": "^15.5.8",
    "radium": "^0.19.5",
    "react": "^16.5.2",
    "react-dom": "^16.5.2",
    "velocity-animate": "^1.5.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.1.0",
    "@babel/core": "^7.1.0",
    "@babel/plugin-proposal-class-properties": "^7.0.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0",
    "@babel/preset-env": "^7.1.0",
    "@babel/preset-react": "^7.0.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^9.0.0",
    "babel-loader": "^8.0.2",
    "enzyme": "^3.6.0",
    "enzyme-adapter-react-16": "^1.5.0",
    "es6-promise": "^4.2.4",
    "eslint": "^5.6.0",
    "eslint-config-mx": "^1.6.0",
    "eslint-config-prettier": "^3.0.1",
    "eslint-loader": "^2.1.1",
    "eslint-plugin-jest": "^21.22.0",
    "eslint-plugin-react": "^7.11.1",
    "exports-loader": "^0.7.0",
    "imports-loader": "^0.8.0",
    "jest": "^23.6.0",
    "jest-enzyme": "^6.0.5"
  },
  "jest": {
    "setupFiles": [
      "<rootDir>/jest-shim.js",
      "<rootDir>/jest-setup.js"
    ],
    "setupTestFrameworkScriptFile": "<rootDir>/node_modules/jest-enzyme/lib/index.js"
  }
}
